<h1>Listing Articles</h1>
<%= button_to 'New article', new_article_path, :method => :get%>
<br/>
<table class="table">
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>

  <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.text %></td>
        <td><%= button_to 'Show', article_path(article),
                        :method => :get %></td>
        <td><%= button_to 'Edit', edit_article_path(article),
                          :method => :get %></td>
        <td><%= button_to 'Destroy', article_path(article),
                        method: :delete,
                        data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
</table>