<h1><%= @article.title %></h1>
<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-body">
    <p><%= @article.text %></p>
  </div>
</div>
<div class="panel-heading"><h2>Comments</h2></div>
<%= render @article.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>
<nav>
  <ul class="pager">
    <li class="previous disabled"><%= link_to 'Back', articles_path %></li>
    <li class="next"><%= link_to 'Edit', edit_article_path(@article) %></li>
  </ul>
</nav>
